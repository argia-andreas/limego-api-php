{
    "name": "grafstorm/limego-api-php",
    "description": "LimeGo API Wrapper",
    "keywords": [
        "grafstorm",
        "limego-api-php"
    ],
    "homepage": "https://github.com/grafstorm/limego-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "grafi",
            "email": "andreas@grafstrom.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Grafstorm\\LimeGoApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grafstorm\\LimeGoApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
